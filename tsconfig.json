{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "target": "ES2021",
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "strictNullChecks": true,
    "useUnknownInCatchVariables": false,
    "paths": {
      "containers": ["src/containers"],
      "components": ["src/components"],
      "hooks": ["src/hooks"],
      "codegen": ["src/codegen"],
      "operations": ["src/operations"],
      "routes": ["src/routes"],
      "config": ["src/config"],
      "styles": ["src/styles"],
      "utils": ["src/utils"],
      "models": ["src/models"],
      "types": ["src/types"],
      "menus": ["src/menus"],
      "vars": ["src/vars"],
      "images": ["src/images"],
    }
  },
  "include": [
    "./src"
  ],
  "exclude": [
    // "node_modules",
    "dist",
    "src/codegen"
  ]
}
