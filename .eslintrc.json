{
  "extends": [
    "airbnb",
    "eslint:recommended",
    "plugin:react/jsx-runtime",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:promise/recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:react-hooks/recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": [
    "react",
    "react-hooks",
    "babel",
    "import",
    "jsx-a11y",
    "promise",
    "react-hooks",
    "@typescript-eslint"
  ],
  "globals": {
    "NodeJS": true,
    "HTMLCollectionOf": true
  },
  "env": {
    "browser": true,
    "es2020": true,
    "node": true,
    "jest": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "overrides": [{
    "files": ["*.ts"],
    "processor": "@graphql-eslint/graphql"      
  }, {
      "files": ["*.graphql"],
      "parser": "@graphql-eslint/eslint-plugin",
      "plugins": ["@graphql-eslint"],
      "parserOptions": {
        "schema": "./src/codegen/schema.graphql",
        "operations": ["./src/operations/*.ts"]
      },
      "rules": {
        "no-multiple-empty-lines": ["error", { "max": 10, "maxEOF": 1 }],
        "no-trailing-spaces": 0
      },
      "extends": "plugin:@graphql-eslint/operations-recommended"
  }],
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [
        ".ts",
        ".tsx"
      ]
    },
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true
      },
      "alias": {
        "map": [
          [
            "components",
            "./src/components"
          ],
          [
            "containers",
            "./src/containers"
          ],
          [
            "hooks",
            "./src/hooks"
          ],
          [
            "operations",
            "./src/operations"
          ],
          [
            "codegen",
            "./src/codegen"
          ],
          [
            "routes",
            "./src/routes"
          ],
          [
            "icons",
            "./src/icons"
          ],
          [
            "helpers",
            "./src/helpers"
          ],
          [
            "types",
            "./src/types"
          ],
          [
            "models",
            "./src/models"
          ],
          [
            "links",
            "./src/links"
          ],
          [
            "menus",
            "./src/menus"
          ],
          [
            "vars",
            "./src/vars"
          ],
          [
            "utils",
            "./src/utils"
          ],
          [
            "images",
            "./src/images"
          ],
          [
            "config",
            "./src/config"
          ]
        ],
        "extensions": [
          ".ts",
          ".tsx"
        ]
      }
    }
  },
  "ignorePatterns": "src/codegen",
  "rules": {
    // common
    "no-console": "warn",
    "max-len": [2, 300, 4],
    "no-shadow": 0,
    "quotes": [
      2,
      "single"
    ],
    "jsx-quotes": [
      "error",
      "prefer-double"
    ],
    "curly": [
      "error",
      "all"
    ],
    "quote-props": [
      "error",
      "as-needed"
    ],
    "linebreak-style": "off",
    "operator-linebreak": [
      "error",
      "after",
      {
        "overrides": {
          "?": "before",
          ":": "before"
        }
      }
    ],
    "keyword-spacing": [
      "error",
      {
        "after": true,
        "before": true
      }
    ],
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "padding-line-between-statements": [
      "error",
      {
        "blankLine": "always",
        "prev": "*",
        "next": "return"
      }
    ],
    "object-curly-newline": [
      "error",
      {
        "ObjectExpression": {
          "multiline": true,
          "minProperties": 2
        },
        "ObjectPattern": {
          "multiline": true
        },
        "ImportDeclaration": {
          "multiline": true,
          "minProperties": 2
        },
        "ExportDeclaration": {
          "multiline": true,
          "minProperties": 3
        }
      }
    ],

    // react
    "react/prop-types": 0,
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off",
    "react/jsx-wrap-multilines": 0,
    "react/jsx-curly-newline": 0,
    "react/jsx-curly-spacing": [
      2,
      {
        "when": "always",
        "children": true,
        "allowMultiline": true,
        "spacing": {
          "objectLiterals": "always"
        }
      }
    ],
    "react/function-component-definition": 0,
    "react/jsx-filename-extension": [2, { "extensions": [".js", ".jsx", ".ts", ".tsx"] }],
    "react/require-default-props": 0,
    "react/no-unused-prop-types": 0,

    // import
    "import/names": 0, // typescript provides that check
    "import/extensions": [1, "never"],

    "no-unused-vars": "off"
    // "@typescript-eslint/no-unused-vars": ["error"]
  }
}